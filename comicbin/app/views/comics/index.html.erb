<% @comics.in_groups_of(4, false).each_with_index do |group, index| %>
  <div class="row">
    <% group.each do |comic| %>
      <div class='col-lg-3 test'>
        <%= link_to (image_tag comic.image_url, {:class => "image-responsive", size: "259x345"}), show_path(comic) %>
      </div>
    <% end %>
  </div>
<% end %>
